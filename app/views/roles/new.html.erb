<h1>New Role</h1>


<%= form_tag(roles_url, method: 'post') do %>


  <div>
    <%= label_tag :character_name %><br />
    <%= text_field_tag :character_name %>
  </div>

    <div>
    <%= label_tag :actor_id %><br />
    <%= number_field_tag :actor_id %>
  </div>

    <div>
    <%= label_tag :movie_id %><br />
    <%= number_field_tag :movie_id %>
  </div>

  
  <div>
    <%= submit_tag "Create Role" %>
  </div>
<% end %>
