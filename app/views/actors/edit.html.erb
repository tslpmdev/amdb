<h1>Editing Actor #<%= @actor.id %></h1>

<% if @actor.errors.any? %>
  <ul>
    <% @actor.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<%= form_tag(actor_url(@actor), method: 'put') do %>

  <div>
    <%= label_tag :name %><br />
    <%= text_field_tag :name, @actor.name %>
  </div>

  <div>
    <%= label_tag :dob %><br />
    <%= text_field_tag :dob, @actor.dob %>
  </div>


  <div>
    <%= submit_tag "Update Actor" %>
  </div>

<% end %>
